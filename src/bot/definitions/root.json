{
    "name": "root",
    "description": "Root-level commands available to root users",
    "settings": {
        "isEnabled": {
            "type": "bool",
            "description": "Enable or disable the bot",
            "default": true
        },
        "rootPrefix": {
            "type": "string",
            "description": "Prefix for root-level commands",
            "default": "root"
        },
        "adminPrefix": {
            "type": "string",
            "description": "Prefix for admin-level commands",
            "default": "admin"
        },
        "AIConfig": {
            "type": "object",
            "properties": {
                "apiKey": {
                    "type": "string",
                    "description": "API key for the AI service",
                    "default": ""
                },
                "model": {
                    "type": "string",
                    "description": "Model to be used for AI interactions",
                    "default": "gemini-1.5-pro"
                },
                "systemPrompt": {
                    "type": "string",
                    "description": "System prompt to guide AI behavior",
                    "default": "You are a helpful assistant."
                }
            },
            "description": "Configuration for AI service"
        },
        "blackList": {
            "type": "object",
            "isList": true,
            "properties": {
                "userId": {
                    "type": "UserId",
                    "description": "User to blacklist"
                },
                "groups": {
                    "type": "GroupId|*",
                    "isList": true,
                    "description": "Groups to ban from. Use * for all groups"
                },
                "services": {
                    "type": "Service|*",
                    "isList": true,
                    "description": "Services to ban from. Use * for all services"
                },
                "commands": {
                    "type": "Command|*",
                    "isList": true,
                    "description": "Commands to ban from. Use * for all commands"
                }
            },
            "description": "Root-level blacklist. Root users can use * to ban from all groups/services/commands",
            "default": []
        },
        "invokePrefixPattern": {
            "type": "string",
            "description": "Prefix to invoke chat bot features",
            "default": "^\\.(?!\\.)\\s*([\\s\\S]+)$"
        }
    },
    "allowInPrivateChat": true,
    "commands": {
        "listRoots": {
            "description": "List all root users",
            "syntax": {
                "parameters": {}
            }
        },
        "addRoot": {
            "description": "Add a root user",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User to add as root"
                    }
                }
            }
        },
        "removeRoot": {
            "description": "Remove a root user",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User to remove from root"
                    }
                }
            }
        },
        "installService": {
            "description": "Install a service into the group",
            "syntax": {
                "parameters": {
                    "chatId": {
                        "type": "GroupId|UserId",
                        "description": "Group or User identifier"
                    },
                    "service": {
                        "type": "Service",
                        "description": "Service identifier"
                    }
                }
            }
        },
        "removeService": {
            "description": "Remove a service from the group",
            "syntax": {
                "parameters": {
                    "chatId": {
                        "type": "GroupId|UserId",
                        "description": "Group or User identifier"
                    },
                    "service": {
                        "type": "Service",
                        "description": "Service identifier"
                    }
                }
            }
        },
        "listServices": {
            "description": "List services installed in the group",
            "syntax": {
                "parameters": {
                    "chatId": {
                        "type": "GroupId|UserId",
                        "description": "Group or User identifier"
                    }
                }
            }
        },
        "addBlacklist": {
            "description": "Add a user to the global blacklist (root only)",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User to blacklist"
                    },
                    "groups": {
                        "type": "GroupId|*",
                        "isList": true,
                        "description": "Groups to ban from. Use * for all groups"
                    },
                    "services": {
                        "type": "Service|*",
                        "isList": true,
                        "description": "Services to ban from. Use * for all services"
                    },
                    "commands": {
                        "type": "Command|*",
                        "isList": true,
                        "description": "Commands to ban from. Use * for all commands"
                    }
                }
            }
        },
        "removeBlacklist": {
            "description": "Remove a user from the global blacklist (root only)",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User to unblacklist"
                    },
                    "groups": {
                        "type": "GroupId|*",
                        "isList": true,
                        "description": "Groups to unban from. Use * for all"
                    },
                    "services": {
                        "type": "Service|*",
                        "isList": true,
                        "description": "Services to unban from. Use * for all"
                    },
                    "commands": {
                        "type": "Command|*",
                        "isList": true,
                        "description": "Commands to unban from. Use * for all"
                    }
                }
            }
        },
        "listBlacklist": {
            "description": "List global blacklist entries (root only)",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User ID to check (use * for all)",
                        "default": "*"
                    }
                }
            }
        },
        "execGrpCmdAsRoot": {
            "description": "Execute a command for a service in the group. Runs with caller's permissions in the target group. Args must include service prefix (e.g., 'exp add 50 groceries')",
            "syntax": {
                "parameters": {
                    "groupId": {
                        "type": "GroupId",
                        "description": "Group identifier"
                    },
                    "responseHere": {
                        "type": "bool",
                        "description": "Whether to respond in the group or where the command was issued"
                    },
                    "parameters": {
                        "type": "Arguments",
                        "description": "Arguments for the command"
                    }
                }
            }
        },
        "execGrpCmdAsUser": {
            "description": "Execute a command for a service in the group. Runs with caller's permissions in the target group. Args must include service prefix (e.g., 'exp add 50 groceries')",
            "syntax": {
                "parameters": {
                    "groupId": {
                        "type": "GroupId",
                        "description": "Group identifier"
                    },
                    "userId": {
                        "type": "UserId",
                        "description": "User identifier"
                    },
                    "responseHere": {
                        "type": "bool",
                        "description": "Whether to respond in the group or where the command was issued"
                    },
                    "parameters": {
                        "type": "Arguments",
                        "description": "Arguments for the command"
                    }
                }
            }
        },
        "execPvtCmdAsUser": {
            "description": "Execute a command for a service in a private chat as a specific user. Args must include service prefix (e.g., 'exp add 50 groceries')",
            "syntax": {
                "parameters": {
                    "userId": {
                        "type": "UserId",
                        "description": "User identifier"
                    },
                    "responseHere": {
                        "type": "bool",
                        "description": "Whether to respond in the private chat or where the command was issued"
                    },
                    "parameters": {
                        "type": "Arguments",
                        "description": "Arguments for the command"
                    }
                }
            }
        },
        "setSetting": {
            "description": "Set a group-level setting for a service",
            "syntax": {
                "parameters": {
                    "setting": {
                        "type": "Setting",
                        "description": "Setting name"
                    },
                    "value": {
                        "type": "any",
                        "description": "Setting value"
                    }
                }
            }
        },
        "unsetSetting": {
            "description": "Unset a group-level setting for a service",
            "syntax": {
                "parameters": {
                    "setting": {
                        "type": "Setting",
                        "description": "Setting name"
                    }
                }
            }
        },
        "listSettings": {
            "description": "List all root-level settings and their values",
            "syntax": {
                "parameters": {
                    "withValues": {
                        "type": "bool",
                        "description": "Whether to include current setting values",
                        "default": false
                    }
                }
            }
        }
    }
}